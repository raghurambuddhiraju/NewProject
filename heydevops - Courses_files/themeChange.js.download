// hex to hsl function(l default to 90)

function hexToHSL(H) {
  // Convert hex to RGB first
  let r = 0;
  let g = 0;
  let b = 0;
  if (H.length === 4) {
    r = `0x${H[1]}${H[1]}`;
    g = `0x${H[2]}${H[2]}`;
    b = `0x${H[3]}${H[3]}`;
  } else if (H.length === 7) {
    r = `0x${H[1]}${H[2]}`;
    g = `0x${H[3]}${H[4]}`;
    b = `0x${H[5]}${H[6]}`;
  }
  // Then to HSL
  r /= 255;
  g /= 255;
  b /= 255;
  const cmin = Math.min(r, g, b);
  const cmax = Math.max(r, g, b);
  const delta = cmax - cmin;
  let h = 0;
  let s = 0;
  let l = 0;

  if (delta === 0) h = 0;
  else if (cmax === r) h = ((g - b) / delta) % 6;
  else if (cmax === g) h = (b - r) / delta + 2;
  else h = (r - g) / delta + 4;

  h = Math.round(h * 60);

  if (h < 0) h += 360;

  l = (cmax + cmin) / 2;
  s = delta === 0 ? 0 : delta / (1 - Math.abs(2 * l - 1));
  s = +(s * 100).toFixed(1);
  l = +(l * 100).toFixed(1);

  return `hsl(${h},${s}%,${90}%)`;
}

let defaultTheme = {
  '--primary-color': '#F2962C',
  '--accent-color': '#FFFBF1',
  '--secondary-color': '#000000',
};

if (!localStorage.getItem('appTheme')) {
  localStorage.setItem('appTheme', JSON.stringify(defaultTheme));
} else {
  defaultTheme = JSON.parse(localStorage.getItem('appTheme'));
  Object.keys(defaultTheme).forEach(ele => {
    document.documentElement.style.setProperty(ele, defaultTheme[ele]);
  });
}

const changeAppTheme = (key, value) => {
  document.documentElement.style.setProperty(
    `--${key}`,
    value ?? defaultTheme[`--${key}`],
  );
  defaultTheme[`--${key}`] = value;

  if (key === 'primary-color') {
    defaultTheme['--accent-color'] = hexToHSL(value);
    document.documentElement.style.setProperty(
      `--accent-color`,
      hexToHSL(value) ?? defaultTheme['--accent-color'],
    );
  }

  localStorage.setItem('appTheme', JSON.stringify(defaultTheme));
};

changeAppTheme();
